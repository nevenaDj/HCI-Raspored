<Window
    x:Class="Raspored.Tabele.Tabele"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Raspored.Tabele"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tabele"
    Width="1000"
    Height="650"
    MinWidth="1000"
    MinHeight="650"
    Top="50"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Blue" Text="Ucionica" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border
                            Padding="8"
                            Background="GhostWhite"
                            BorderBrush="Gainsboro"
                            BorderThickness="4"
                            CornerRadius="8,8,3,3">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <DataGrid
                                    x:Name="dgrMainUcionica"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    AutoGenerateColumns="False"
                                    BorderThickness="0"
                                    IsReadOnly="True"
                                    IsSynchronizedWithCurrentItem="True">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="50" Header="Oznaka">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Oznaka:" />
                                                        <TextBlock Text="" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Width="50" Header="Opis" />
                                        <DataGridTextColumn Width="110" Header="Broj radnih mesta" />
                                        <DataGridTextColumn Width="150" Header="Operativni sistem" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Width="80"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right">
                                    Dodaj
                                </Button>
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right">
                                    Promeni
                                </Button>
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Width="80"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right">
                                    Izbrisi
                                </Button>

                            </Grid>
                        </Border>
                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="20"
                            Background="GhostWhite"
                            BorderBrush="Gainsboro"
                            BorderThickness="4"
                            CornerRadius="8,8,3,3">
                            <Grid Margin="10" DataContext="{Binding ElementName=dgrMainUcionica, Path=SelectedItem}">
                                <Grid.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Margin" Value="0,0,60,4" />
                                    </Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Margin" Value="0,0,10,0" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0">Oznaka</TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="0">Opis</TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="0">Broj radnih mesta</TextBlock>
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Margin="2,2,2,2">
                                    Projektor
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    Margin="2,2,2,2">
                                    Tabla
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="3"
                                    Margin="2,2,2,2">
                                    Pametna tabla
                                </TextBlock>
                                <TextBlock Grid.Row="0" Grid.Column="3">Operativni sistem</TextBlock>
                                <Button
                                    Grid.Row="7"
                                    Grid.Column="4"
                                    Width="80"
                                    Margin="0,5,5,0"
                                    HorizontalAlignment="Right">
                                    Sacuvaj
                                </Button>
                                <Button
                                    Grid.Row="7"
                                    Grid.Column="5"
                                    Width="80"
                                    Margin="0,5,80,0"
                                    HorizontalAlignment="Right">
                                    Odustani
                                </Button>
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Text="" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Text="" />
                                <TextBox
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,0,0,0"
                                    Text="" />
                                <ComboBox Grid.Row="0" Grid.Column="4" />
                                <CheckBox Grid.Row="2" Grid.Column="4" />
                                <CheckBox Grid.Row="3" Grid.Column="4" />
                                <CheckBox Grid.Row="4" Grid.Column="4" />
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem>

<Window
    x:Class="Raspored.Tabele.Tabele"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:Raspored"
    xmlns:local="clr-namespace:Raspored.Tabele"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Raspored.Model"
    xmlns:val="clr-namespace:Raspored.Tabele"
    Title="Prikaz podataka"
    Width="1200"
    Height="650"
    MinWidth="1200"
    MinHeight="650"
    l:HelpProvider.HelpKey="Tab"
    Activated="HandleWindowActivated"
    Closing="Window_Closing"
    FontSize="16"
    Top="50"
    mc:Ignorable="d">

    <Window.CommandBindings>
        <CommandBinding
            CanExecute="DodajUcionicu_CanExecute"
            Command="local:Komande.Novi"
            Executed="DodajUcionicu_Executed" />
        <CommandBinding
            CanExecute="DodajPredmet_CanExecute"
            Command="local:Komande.Novi"
            Executed="DodajPredmet_Executed" />
        <CommandBinding
            CanExecute="DodajSmer_CanExecute"
            Command="local:Komande.Novi"
            Executed="DodajSmer_Executed" />
        <CommandBinding
            CanExecute="DodajSoftver_CanExecute"
            Command="local:Komande.Novi"
            Executed="DodajSoftver_Executed" />
        <CommandBinding Command="ApplicationCommands.Help" Executed="CommandBinding_Executed" />
    </Window.CommandBindings>
    <Grid x:Name="Proba">
        <Grid>
            <TabControl SelectionChanged="TabControl_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border
                                        Name="Border"
                                        Margin="2,0"
                                        BorderBrush="Gainsboro"
                                        BorderThickness="1,1,1,0"
                                        CornerRadius="4,4,0,0">
                                        <ContentPresenter
                                            x:Name="ContentSite"
                                            Margin="10,2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            ContentSource="Header" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                            <Setter Property="Foreground" Value="Blue" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                            <Setter Property="Foreground" Value="DarkGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem
                    x:Name="TabUc"
                    l:HelpProvider.HelpKey="Tabele"
                    IsEnabled="{Binding TabUcionice}"
                    IsSelected="{Binding SelectedTabUcionice}">
                    <TabItem.CommandBindings>
                        <CommandBinding Command="ApplicationCommands.Help" Executed="CommandBinding_Executed" />
                    </TabItem.CommandBindings>
                    <TabItem.InputBindings>
                        <KeyBinding Key="F" Modifiers="Ctrl" />
                    </TabItem.InputBindings>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Učionica" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.CommandBindings>
                            <CommandBinding
                                CanExecute="RezimIzmeniUcionicu_CanExecute"
                                Command="local:Komande.Izmeni"
                                Executed="RezimIzmeniUcionicu_Executed" />
                            <CommandBinding
                                CanExecute="CommandBinding_CanExecute_2"
                                
                                Command="local:Komande.Brisanje"
                                Executed="IzbrisiUcionicu_Executed" />

                            <CommandBinding Command="ApplicationCommands.Help" Executed="CommandBinding_Executed" />
                        </Grid.CommandBindings>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="39*" />
                            <ColumnDefinition Width="13*" />
                            <ColumnDefinition Width="310*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Padding="8"
                            l:HelpProvider.HelpKey="Tabele"
                            Background="GhostWhite"
                            BorderBrush="Gainsboro"
                            BorderThickness="4"
                            CornerRadius="8,8,3,3">
                            <Grid x:Name="Grid1" l:HelpProvider.HelpKey="Tabele">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="115*" />
                                    <ColumnDefinition Width="677*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid
                                    x:Name="GridPretraga"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Top">
                                        Pretraga
                                    </TextBlock>
                                    <TextBox
                                        x:Name="TextBoxPretragaUcionice"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="500"
                                        Margin="2,0,2,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        l:HelpProvider.HelpKey="PretragaUcionice"
                                        Text="{Binding Pretraga}" />
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Width="80"
                                        Margin="2,0,2,5"
                                        HorizontalAlignment="Left"
                                        Click="Button_Click_2">
                                        Pretrazi
                                    </Button>
                                    <Button
                                        x:Name="ButtonOtkazi"
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        Width="80"
                                        Margin="2,0,2,5"
                                        HorizontalAlignment="Left"
                                        Click="Button_Click_4">
                                        Otkazi
                                    </Button>
                                </Grid>
                                <Grid
                                    x:Name="GridFilter"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0">Projektor</TextBlock>
                                    <ComboBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="5,0,30,5"
                                        ItemsSource="{Binding Projektor}"
                                        SelectedValue="{Binding IzabraniProjektor}"
                                        SelectionChanged="ComboBox_SelectionChanged_1" />
                                    <TextBlock Grid.Row="0" Grid.Column="2">Tabla</TextBlock>
                                    <ComboBox
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        Margin="5,0,30,5"
                                        ItemsSource="{Binding Tabla}"
                                        SelectedValue="{Binding IzabranaTabla}"
                                        SelectionChanged="ComboBox_SelectionChanged_2" />
                                    <TextBlock Grid.Row="0" Grid.Column="4">Pametna tabla</TextBlock>
                                    <ComboBox
                                        Grid.Row="0"
                                        Grid.Column="5"
                                        Margin="5,0,30,5"
                                        ItemsSource="{Binding PametnaTabla}"
                                        SelectedValue="{Binding IzabranaPametnaTabla}"
                                        SelectionChanged="ComboBox_SelectionChanged_3" />

                                    <TextBlock Grid.Row="0" Grid.Column="6">Operativni sistem</TextBlock>
                                    <ComboBox
                                        Grid.Row="0"
                                        Grid.Column="7"
                                        Margin="5,0,30,5"
                                        ItemsSource="{Binding OS}"
                                        SelectedValue="{Binding IzabraniOS}"
                                        SelectionChanged="ComboBox_SelectionChanged" />
                                    <Button
                                        x:Name="ButtonOtkaziFilter"
                                        Grid.Row="0"
                                        Grid.Column="8"
                                        Width="80"
                                        Margin="100,0,2,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Click="Button_Click_4">
                                        Otkazi
                                    </Button>


                                </Grid>
                                <Button
                                    x:Name="ButtonPretragaDemo"
                                    Grid.Row="0"
                                    Grid.Column="4"
                                    Width="80"
                                    Margin="10,0,2,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    IsEnabled="{Binding EnableDodaj}">
                                    Pretraga
                                </Button>
                                <Button
                                    x:Name="ButtonPretraga"
                                    Grid.Row="0"
                                    Grid.Column="4"
                                    Width="80"
                                    Margin="10,0,2,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="Button_Click_3"
                                    IsEnabled="{Binding EnableDodaj}">
                                    Pretraga
                                </Button>
                                <Button
                                    x:Name="ButtonFilter"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Width="80"
                                    Margin="0,0,2,5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Click="ButtonFilter_Click"
                                    IsEnabled="{Binding EnableDodaj}">
                                    Filter
                                </Button>
                                <Button
                                    x:Name="ButtonFilterDemo"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Width="80"
                                    Margin="0,0,2,5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    IsEnabled="{Binding EnableDodaj}">
                                    Filter
                                </Button>
                                <DataGrid
                                    x:Name="dgrMainUcionica"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    l:HelpProvider.HelpKey="Tabele"
                                    AutoGenerateColumns="False"
                                    BorderThickness="1"
                                    IsEnabled="{Binding Podaci}"
                                    IsReadOnly="True"
                                    IsSynchronizedWithCurrentItem="True"
                                    ItemsSource="{Binding Path=Ucionice, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedItem="{Binding Path=SelectedUcionica, UpdateSourceTrigger=PropertyChanged}">

                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="Auto" Header="Oznaka">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Oznaka}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Opis}"
                                            CanUserSort="False"
                                            Header="Opis" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding BrojRadnihMesta}"
                                            CanUserSort="False"
                                            Header="Broj radnih mesta" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Sistem}"
                                            CanUserSort="False"
                                            Header="Operativni sistem" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Projektor}"
                                            CanUserSort="False"
                                            Header="Ima projektor" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Tabla}"
                                            CanUserSort="False"
                                            Header="Ima tablu" />

                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding PametnaTabla}"
                                            CanUserSort="False"
                                            Header="Ima pametnu tablu" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button
                                    x:Name="DodajButton"
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Width="150"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right"
                                    l:HelpProvider.HelpKey="Tabele"
                                    Command="local:Komande.Novi"
                                    IsEnabled="{Binding EnableDodaj}"
                                    ToolTip="Ctrl+N">
                                    Dodaj novu učionicu
                                </Button>
                                <Button
                                    x:Name="DodajDemo"
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Width="150"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right"
                                    IsEnabled="{Binding EnableDodaj}"
                                    ToolTip="Ctrl+N">
                                    Dodaj novu učionicu
                                </Button>
                                <Button
                                    x:Name="IzmeniButton"
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Width="120"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right"
                                    l:HelpProvider.HelpKey="Tabele"
                                    Command="local:Komande.Izmeni"
                                    IsEnabled="{Binding EnablePromeniUcionicu}"
                                    ToolTip="Ctrl+U">
                                    Izmeni učionicu
                                </Button>
                                <Button
                                    x:Name="IzmeniDemo"
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Width="120"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right"
                                    IsEnabled="{Binding EnablePromeniUcionicu}"
                                    ToolTip="Ctrl+U">
                                    Izmeni učionicu
                                </Button>
                                <Button
                                    x:Name="ObrisiButton"
                                    Grid.Row="2"
                                    Grid.Column="4"
                                    Width="120"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right"
                                    l:HelpProvider.HelpKey="Tabele"
                                    Command="local:Komande.Brisanje"
                                    IsEnabled="{Binding EnableIzbrisiUcionicu}"
                                    ToolTip="Ctrl+Delete">
                                    Obriši učionicu
                                </Button>
                                <Button
                                    x:Name="ObrisiDemo"
                                    Grid.Row="2"
                                    Grid.Column="4"
                                    Width="120"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right"
                                    IsEnabled="{Binding EnableIzbrisiUcionicu}"
                                    ToolTip="Ctrl+Delete">
                                    Obriši učionicu
                                </Button>
                            </Grid>
                        </Border>
                        <Border
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Padding="20"
                            l:HelpProvider.HelpKey="DodavanjeUcionica"
                            Background="GhostWhite"
                            BorderBrush="Gainsboro"
                            BorderThickness="4"
                            CornerRadius="8,8,3,3">
                            <Grid
                                x:Name="GridUcionice"
                                Margin="10"
                                l:HelpProvider.HelpKey="DodavanjeUcionica"
                                DataContext="{Binding Path=SelectedUcionica, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">


                                <Grid.CommandBindings>
                                    <CommandBinding
                                        CanExecute="SacuvajUcionicu_CanExecute"
                                        Command="local:Komande.Dodavanje"
                                        Executed="SacuvajUcionicu_Executed" />
                                    <CommandBinding
                                        CanExecute="IzmeniUcionicu_CanExecute"
                                        Command="local:Komande.Izmena"
                                        Executed="SacuvajIzmenuUcionice_Executed" />
                                </Grid.CommandBindings>
                                <Grid.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Margin" Value="0,0,60,4" />
                                        <Setter Property="BorderThickness" Value="2" />
                                        <Setter Property="FontWeight" Value="DemiBold" />
                                        <Style.Triggers>
                                            <Trigger Property="IsReadOnly" Value="True">
                                                <Setter Property="Background" Value="LightGray" />
                                            </Trigger>
                                            <Trigger Property="IsReadOnly" Value="False">
                                                <Setter Property="Background" Value="White" />
                                            </Trigger>
                                        </Style.Triggers>



                                    </Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Margin" Value="0,0,10,0" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="73" />
                                    <ColumnDefinition Width="Auto" MinWidth="61" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="260*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="261*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0">Oznaka*</TextBlock>
                                <TextBlock
                                    x:Name="EUcionice"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Margin="0,0,0,0"
                                    Foreground="Red"
                                    Visibility="Collapsed">
                                    Oznaka ucionice mora biti jedinstvena.
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="0">Opis</TextBlock>
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2">
                                    Broj radnih mesta
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2">
                                    Instalirani softveri
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="4"
                                    Height="21"
                                    Margin="30,2,2,0"
                                    VerticalAlignment="Top">
                                    Projektor
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="4"
                                    Margin="30,2,2,2">
                                    Tabla
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="4"
                                    Margin="30,2,2,2">
                                    Pametna tabla
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="4"
                                    Margin="20,0,10,0">
                                    Operativni sistem
                                </TextBlock>
                                <TextBlock
                                    x:Name="BoxPrikaz"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Width="125"
                                    Margin="0,0,0,4"
                                    HorizontalAlignment="Left"
                                    Foreground="Black"
                                    Text="{Binding Path=Oznaka}"
                                    Visibility="{Binding UPrikazEnable}" />
                                <TextBlock
                                    x:Name="OpisBoxPrikaz"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    Foreground="Black"
                                    Text="{Binding Path=Opis}"
                                    Visibility="{Binding UPrikazEnable}" />
                                <TextBlock
                                    x:Name="BrRadnihMestaPrikaz"
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Margin="0,0,0,0"
                                    Foreground="Black"
                                    Text="{Binding Path=BrojRadnihMesta}"
                                    Visibility="{Binding UPrikazEnable}" />

                                <TextBlock
                                    x:Name="OSPrikaz"
                                    Grid.Row="0"
                                    Grid.Column="5"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Foreground="Black"
                                    Text="{Binding Path=Sistem}"
                                    Visibility="{Binding UPrikazEnable}" />
                                <TextBlock
                                    x:Name="Check1Prikaz"
                                    Grid.Row="2"
                                    Grid.Column="5"
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="{Binding Path=Projektor}"
                                    Visibility="{Binding UPrikazEnable}" />
                                <TextBlock
                                    x:Name="Check2Prikaz"
                                    Grid.Row="3"
                                    Grid.Column="5"
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="{Binding Path=Tabla}"
                                    Visibility="{Binding UPrikazEnable}" />
                                <TextBlock
                                    x:Name="Check3Prikaz"
                                    Grid.Row="4"
                                    Grid.Column="5"
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="{Binding Path=PametnaTabla}"
                                    Visibility="{Binding UPrikazEnable}" />
                                <Button
                                    x:Name="SacuvajUcionicuDemo"
                                    Grid.Row="7"
                                    Grid.Column="5"
                                    Width="120"
                                    Margin="0,5,5,0"
                                    HorizontalAlignment="Right"
                                    ToolTip="Ctrl+D">
                                    Dodaj ucionicu
                                </Button>


                                <Button
                                    x:Name="SacuvajUcionicu"
                                    Grid.Row="7"
                                    Grid.Column="5"
                                    Width="120"
                                    Margin="0,5,5,0"
                                    HorizontalAlignment="Right"
                                    l:HelpProvider.HelpKey="DodavanjeUcionica"
                                    Command="local:Komande.Dodavanje"
                                    ToolTip="Ctrl+D"
                                    Visibility="{Binding VisibleSacuvaj}">
                                    Dodaj ucionicu
                                </Button>

                                <Button
                                    x:Name="SacuvajIzmenuUcionice"
                                    Grid.Row="7"
                                    Grid.Column="5"
                                    Width="120"
                                    Margin="0,5,5,0"
                                    HorizontalAlignment="Right"
                                    l:HelpProvider.HelpKey="DodavanjeUcionica"
                                    Command="local:Komande.Izmena"
                                    ToolTip="Ctrl+S"
                                    Visibility="{Binding VisibleSacuvaj}">
                                    Sacuvaj izmenu
                                </Button>

                                <Button
                                    x:Name="OdusatniUcionica"
                                    Grid.Row="7"
                                    Grid.Column="6"
                                    Width="120"
                                    Margin="0,5,10,0"
                                    HorizontalAlignment="Right"
                                    l:HelpProvider.HelpKey="DodavanjeUcionica"
                                    Click="OdustaniUcionica_Click">
                                    Odustani
                                </Button>
                                <Button
                                    x:Name="OdusatniUcionicaDemo"
                                    Grid.Row="7"
                                    Grid.Column="6"
                                    Width="120"
                                    Margin="0,5,10,0"
                                    HorizontalAlignment="Right">
                                    Odustani
                                </Button>
                                <Button
                                    x:Name="IzmenaOdustaniUcionica"
                                    Grid.Row="7"
                                    Grid.Column="6"
                                    Width="120"
                                    Margin="0,5,10,0"
                                    HorizontalAlignment="Right"
                                    l:HelpProvider.HelpKey="DodavanjeUcionica"
                                    Click="IzmenaOdustaniUcionica_Click">
                                    Ponisti izmenu
                                </Button>

                                <TextBox
                                    Name="Box"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Width="125"
                                    Margin="0,0,0,4"
                                    HorizontalAlignment="Left"
                                    l:HelpProvider.HelpKey="DodavanjeUcionica"
                                    LostFocus="Box_LostFocus"
                                    Text="{Binding Path=Oznaka}" />

                                <TextBox
                                    x:Name="OpisBox"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    l:HelpProvider.HelpKey="DodavanjeUcionica"
                                    Text="{Binding Path=Opis}" />

                                <TextBox
                                    x:Name="BrMestaBox"
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Margin="0,0,0,0"
                                    l:HelpProvider.HelpKey="DodavanjeUcionica"
                                    Validation.Error="Validation_Error">
                                    <TextBox.Text>
                                        <Binding
                                            NotifyOnValidationError="True"
                                            Path="BrojRadnihMesta"
                                            UpdateSourceTrigger="PropertyChanged"
                                            ValidatesOnDataErrors="True">
                                            <Binding.ValidationRules>
                                                <val:StringToIntValidationRule ValidationStep="RawProposedValue" />
                                                <val:MinMaxValidationRule
                                                    Max="1000"
                                                    Min="0"
                                                    ValidationStep="ConvertedProposedValue" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                    <Validation.ErrorTemplate>
                                        <ControlTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <AdornedElementPlaceholder
                                                    x:Name="textBox"

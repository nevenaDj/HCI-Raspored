                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="50" Header="Oznaka">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Oznaka:" />

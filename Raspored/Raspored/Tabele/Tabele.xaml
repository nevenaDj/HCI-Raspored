                            Background="GhostWhite"
                            BorderBrush="Gainsboro"
                            BorderThickness="4"
                            CornerRadius="8,8,3,3">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <DataGrid
                                    x:Name="dgrMainPredmet"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    AutoGenerateColumns="False"
                                    IsReadOnly="True"
                                    IsSynchronizedWithCurrentItem="True">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="50" Header="Oznaka">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Oznaka:" />
                                                        <TextBlock Text="" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Width="40" Header="Naziv" />
                                        <DataGridTextColumn Width="40" Header="Smer" />
                                        <DataGridTextColumn Width="40" Header="Opis" />
                                        <DataGridTextColumn Width="90" Header="Velicina grupe" />
                                        <DataGridTextColumn Width="150" Header="Minimalna duzina termina" />
                                        <DataGridTextColumn Width="80" Header="Broj termina" />
                                        <DataGridTextColumn Width="150" Header="Operativni sistem" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Width="80"
                                    Margin="0,5,5,15"
                                    HorizontalAlignment="Right">

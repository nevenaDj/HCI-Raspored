<Window
    x:Class="Raspored.Tabele.Tabele"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Raspored.Tabele"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tabele"
    Width="900"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Blue" Text="Ucionica" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <DataGrid
                            x:Name="dgrMainUcionica"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            IsSynchronizedWithCurrentItem="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="50" Header="Oznaka">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Oznaka:" />
                                                <TextBlock Text="" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="50" Header="Opis" />
                                <DataGridTextColumn Width="110" Header="Broj radnih mesta" />
                                <DataGridTextColumn Width="150" Header="Operativni sistem" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,0,156"
                            DataContext="{Binding ElementName=dgrMainUcionica, Path=SelectedItem}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0">Oznaka:</TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="0">Opis:</TextBlock>
                            <TextBlock Grid.Row="2" Grid.Column="0">Broj radnih mesta:</TextBlock>
                            <TextBlock Grid.Row="3" Grid.Column="0">Projektor:</TextBlock>
                            <TextBlock Grid.Row="4" Grid.Column="0">Tabla:</TextBlock>
                            <TextBlock Grid.Row="5" Grid.Column="0">Pametna tabla:</TextBlock>
                            <TextBlock Grid.Row="6" Grid.Column="0">Operativni sistem:</TextBlock>
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="" />
                            <CheckBox Grid.Row="3" Grid.Column="1" />
                            <CheckBox Grid.Row="4" Grid.Column="1" />
                            <CheckBox Grid.Row="5" Grid.Column="1" />
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Red" Text="Predmet" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <DataGrid
                            x:Name="dgrMainPredmet"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            IsSynchronizedWithCurrentItem="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="50" Header="Oznaka">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Oznaka:" />
                                                <TextBlock Text="" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="40" Header="Naziv" />
                                <DataGridTextColumn Width="40" Header="Smer" />
                                <DataGridTextColumn Width="40" Header="Opis" />
                                <DataGridTextColumn Width="90" Header="Velicina grupe" />
                                <DataGridTextColumn Width="150" Header="Minimalna duzina termina" />
                                <DataGridTextColumn Width="80" Header="Broj termina" />
                                <DataGridTextColumn Width="150" Header="Operativni sistem" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,0,156"
                            DataContext="{Binding ElementName=dgrMainPredmet, Path=SelectedItem}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0">Oznaka:</TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="0">Naziv:</TextBlock>
                            <TextBlock Grid.Row="2" Grid.Column="0">Smer:</TextBlock>
                            <TextBlock Grid.Row="3" Grid.Column="0">Opis:</TextBlock>
                            <TextBlock Grid.Row="4" Grid.Column="0">Velicina grupe:</TextBlock>
                            <TextBlock Grid.Row="5" Grid.Column="0">Minimalna duzina termina:</TextBlock>
                            <TextBlock Grid.Row="6" Grid.Column="0">Broj termina:</TextBlock>
                            <TextBlock Grid.Row="7" Grid.Column="0">Projektor:</TextBlock>
                            <TextBlock Grid.Row="8" Grid.Column="0">Tabla:</TextBlock>
                            <TextBlock Grid.Row="9" Grid.Column="0">Pametna tabla:</TextBlock>
                            <TextBlock Grid.Row="10" Grid.Column="0">Operativni sistem:</TextBlock>
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="4"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="5"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Text="" />
                            <CheckBox Grid.Row="7" Grid.Column="1" />
                            <CheckBox Grid.Row="8" Grid.Column="1" />
                            <CheckBox Grid.Row="9" Grid.Column="1" />
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Green" Text="Smer" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <DataGrid
                            x:Name="dgrMainSmer"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            IsSynchronizedWithCurrentItem="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="50" Header="Oznaka">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Oznaka:" />
                                                <TextBlock Text="" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="50" Header="Naziv" />
                                <DataGridTextColumn Width="100" Header="Datum uvodjenja" />
                                <DataGridTextColumn Width="50" Header="Opis" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,0,156"
                            DataContext="{Binding ElementName=dgrMainSmer, Path=SelectedItem}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0">Oznaka:</TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="0">Naziv:</TextBlock>
                            <TextBlock Grid.Row="2" Grid.Column="0">Datum uvodjenja:</TextBlock>
                            <TextBlock Grid.Row="3" Grid.Column="0">Opis:</TextBlock>
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Text="" />
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Violet" Text="Softver" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <DataGrid
                            x:Name="dgrMainSoftver"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            IsSynchronizedWithCurrentItem="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="50" Header="Oznaka">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Oznaka:" />
                                                <TextBlock Text="" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="50" Header="Naziv" />
                                <DataGridTextColumn Width="150" Header="Operativni sistem" />
                                <DataGridTextColumn Width="100" Header="Proizvodjac" />
                                <DataGridTextColumn Width="50" Header="Sajt" />
                                <DataGridTextColumn Width="150" Header="Godina izdavanja" />
                                <DataGridTextColumn Width="50" Header="Cena" />
                                <DataGridTextColumn Width="50" Header="Opis" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,0,156"
                            DataContext="{Binding ElementName=dgrMainSoftver, Path=SelectedItem}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0">Oznaka:</TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="0">Naziv:</TextBlock>
                            <TextBlock Grid.Row="2" Grid.Column="0">Operativni sistem:</TextBlock>
                            <TextBlock Grid.Row="3" Grid.Column="0">Proizvodjac:</TextBlock>
                            <TextBlock Grid.Row="4" Grid.Column="0">Sajt:</TextBlock>
                            <TextBlock Grid.Row="5" Grid.Column="0">Godina izdavanja:</TextBlock>
                            <TextBlock Grid.Row="6" Grid.Column="0">Cena:</TextBlock>
                            <TextBlock Grid.Row="7" Grid.Column="0">Opis:</TextBlock>
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="4"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="5"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Text="" />
                            <TextBox
                                Grid.Row="7"
                                Grid.Column="1"
                                Text="" />
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
